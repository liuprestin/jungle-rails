<h2>Login</h2>

<%= form_with(scope: :session, url: login_path, local: true) do |form| %>

  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "Log in" %>
  </div>

<% end %>